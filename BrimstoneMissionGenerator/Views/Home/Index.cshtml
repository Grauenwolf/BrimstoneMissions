@{
    ViewBag.Title = "Home Page";
}

<h2>Shadows of Brimstone Mission Generator</h2>

<div class="row">
    @using (Html.BeginForm("Mission", "Home", FormMethod.Post))
    {
        <div>
            @foreach (BrimstoneMissionGenerator.Models.CheckList item in Model)
            {

                
                    <label title="@(item.MissionsSet.MissionNameHtml)">
                        @Html.CheckBox("Mission_" + item.MissionsSet.Id, item.Available )
                            @item.MissionsSet.Name
                        @if(!string.IsNullOrEmpty(item.MissionsSet.Locations))
                        {
                            <text>
                            (@item.MissionsSet.Locations)
                            </text>
                        }
                        @if(!string.IsNullOrEmpty(item.MissionsSet.DownloadUrl))
                        {
                            <a target="_blank" href="@item.MissionsSet.DownloadUrl">Download</a>
                        }
                    </label>
          <br/>      
            }
        </div>
        <input type="submit" class="submit" value="Create Mission" />
    }
</div>